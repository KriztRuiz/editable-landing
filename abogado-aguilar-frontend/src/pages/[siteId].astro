---
export const prerender = false;

import "../styles/global.css";
import { fetchContent, buildWhatsAppUrl } from "../lib/api";
import type { SiteContent } from "../types";

const raw = Astro.params.siteId;
const siteId = String(raw ?? "").trim();

// Debug opcional: /ejemplo2?debug=1
const showDebug = import.meta.env.DEV || Astro.url.searchParams.get("debug") === "1";

let content: SiteContent | null = null;

try {
  if (!siteId) throw new Error("siteId vacío");
  content = await fetchContent(siteId);
} catch (err) {
  // 404 real (sin redireccionar)
  Astro.response.status = 404;
  Astro.response.statusText = "Not Found";
  console.error("[siteId].astro fetchContent error:", err);
}

// CSS vars (string) — para no depender de React/CSSProperties
const cssVars = content?.theme?.colors
  ? `--p:${content.theme.colors.primary};--s:${content.theme.colors.secondary ?? content.theme.colors.primary};--bg:${content.theme.colors.background};--t:${content.theme.colors.text};`
  : `--p:#0f172a;--s:#1e293b;--bg:#ffffff;--t:#0b0b0b;`;

const title = content?.seo?.title || content?.profile?.fullName || siteId || "Sitio";
const description = content?.seo?.description || "";

const whatsappBase = content?.contact?.whatsapp || content?.contact?.phone || "";
const whatsappUrl =
  whatsappBase ? buildWhatsAppUrl(whatsappBase, content?.cta?.whatsappMessage) : "";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
  </head>

  <body style={cssVars}>
    <!-- ✅ CSS puro: SIN { } y SIN backticks -->
    <style is:global>
      body { background: var(--bg); color: var(--t); margin: 0; font-family: system-ui, sans-serif; }
      main { max-width: 1100px; margin: 0 auto; padding: 1.5rem; }
      .card { border: 1px solid rgba(0,0,0,.08); border-radius: 1rem; padding: 1rem; background: #fff; }
      .muted { color: rgba(0,0,0,.55); }
      .btn {
        display:inline-flex; align-items:center; justify-content:center;
        padding:.75rem 1rem; border-radius: .9rem;
        background: var(--p); color: #fff; text-decoration:none; font-weight: 700;
      }
      .grid { display:grid; gap: 1rem; }
      @media (min-width: 768px) { .grid-2 { grid-template-columns: 1fr 1fr; } }
      img.logo { width: 80px; height: 80px; border-radius: 1rem; object-fit: cover; }
    </style>

    <main>
      {!content ? (
        <section class="card">
          <h1 style="margin:0; font-size: 1.5rem;">Sitio no encontrado</h1>
          <p class="muted" style="margin-top:.5rem;">
            No existe contenido para <code>{siteId}</code> o el backend no respondió.
          </p>

          {showDebug && (
            <details style="margin-top:1rem;">
              <summary style="cursor:pointer; font-weight:700;">Debug</summary>
              <pre style="margin-top:.75rem; overflow:auto; font-size:.8rem;">
{JSON.stringify(
  { siteId, PUBLIC_API_BASE: import.meta.env.PUBLIC_API_BASE },
  null,
  2
)}
              </pre>
            </details>
          )}
        </section>
      ) : (
        <>
          <header class="card" style="display:flex; gap:1rem; align-items:center;">
            {content.theme?.logoUrl && (
              <img class="logo" src={content.theme.logoUrl} alt={`Logo de ${title}`} loading="lazy" />
            )}

            <div style="flex:1;">
              <h1 style="margin:0; font-size:1.8rem;">{content.profile?.fullName ?? title}</h1>
              {content.profile?.headline && <p class="muted" style="margin:.25rem 0 0;">{content.profile.headline}</p>}
            </div>

            {content.cta?.preferred === "whatsapp" && whatsappUrl && (
              <a class="btn" href={whatsappUrl} target="_blank" rel="noreferrer">WhatsApp</a>
            )}
            {content.cta?.preferred === "agenda" && content.cta?.bookingUrl && (
              <a class="btn" href={content.cta.bookingUrl} target="_blank" rel="noreferrer">Agendar</a>
            )}
            {content.cta?.preferred === "call" && content.contact?.phone && (
              <a class="btn" href={`tel:${content.contact.phone}`}>Llamar</a>
            )}
          </header>

          <section class="grid grid-2" style="margin-top:1rem;">
            <div class="card">
              <h2 style="margin:0;">Acerca de</h2>
              <p class="muted" style="margin-top:.5rem;">{content.profile?.intro || "—"}</p>
            </div>

            <div class="card">
              <h2 style="margin:0;">Contacto</h2>
              <ul style="margin-top:.5rem; padding-left:1rem;">
                {content.contact?.email && <li><a href={`mailto:${content.contact.email}`}>{content.contact.email}</a></li>}
                {content.contact?.phone && <li><a href={`tel:${content.contact.phone}`}>{content.contact.phone}</a></li>}
                {content.contact?.address && <li class="muted">{content.contact.address}</li>}
              </ul>
            </div>
          </section>

          {showDebug && (
            <section class="card" style="margin-top:1rem;">
              <h2 style="margin:0;">Debug: JSON completo</h2>
              <pre style="margin-top:.75rem; overflow:auto; font-size:.8rem;">
{JSON.stringify(content, null, 2)}
              </pre>
            </section>
          )}
        </>
      )}
    </main>
  </body>
</html>
